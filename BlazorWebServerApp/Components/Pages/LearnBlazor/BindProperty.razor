@page "/learnblazor/bindProp"
@rendermode InteractiveServer
<h3 class="mb-3">Individual Product</h3>

<div class="card mb-4">
    <div class="card-body">

        <div class="row">
            <!-- SUMMARY SECTION -->
            <div class="col-md-6">
                <h5 class="mb-3">Summary</h5>

                <table class="table table-bordered">
                    <tr>
                        <th>ID</th>
                        <td>@Product.Id</td>
                    </tr>

                    <tr>
                        <th>Name</th>
                        <td>@Product.Name</td>
                    </tr>

                    <tr>
                        <th>Status</th>
                        <td>@(Product.IsActive ? "Active" : "Inactive")</td>
                    </tr>

                    <tr>
                        <th>Price</th>
                        <td>@Product.Price</td>
                    </tr>

                    <tr>
                        <th>Selected Property</th>
                        <td>
                            @(string.IsNullOrWhiteSpace(SelectedProperty)
                                                        ? ""
                                                        : SelectedProperty)
                        </td>
                    </tr>

                    @if (!string.IsNullOrWhiteSpace(SelectedProp?.ToString()))
                    {
                        <tr>
                            <th>Property Id</th>
                            <td>@SelectedProp.Id</td>
                        </tr>

                        <tr>
                            <th>Property Value</th>
                            <td>@SelectedProp.Value</td>
                        </tr>
                    }
                </table>
            </div>

            <!-- PLAYGROUND SECTION -->
            <div class="col-md-6">
                <h5 class="mb-3">Playground</h5>

                <div class="mb-3">
                    <label class="fw-bold">Activity</label><br />
                    <input type="checkbox"
                           @bind-value="Product.IsActive"
                           checked="@(Product.IsActive ? "checked" : null)" />
                </div>

                <div class="mb-3">
                    <label class="fw-bold">Price Change</label>
                    <input type="number"
                           class="form-control"
                           @bind-value="Product.Price"
                           @bind-value:event="oninput" />
                </div>

                <div class="mb-3">
                    <label class="fw-bold">Properties</label>
                    <select class="form-select" @bind="SelectedProperty">
                        <option value="">Select Property</option>
                        @foreach (var c in Product.Properties)
                        {
                            <option value="@c.Key">@c.Key</option>
                        }
                    </select>
                </div>
            </div>
        </div>

    </div>
</div>


<h3>Product Table</h3>
<div class="card mb-4">
    <div class="card-body">

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Active</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Products)
                {
                    <tr>
                        <td>
                            <input class="form-control"
                                   type="text"
                                   @bind="c.Name"
                                   @bind:event="oninput" />
                        </td>

                        <td>
                            <input class="form-control"
                                   type="number"
                                   @bind="c.Price"
                                   @bind:event="oninput" />
                        </td>

                        <td class="text-center">
                            <input type="checkbox"
                                   @bind-value="c.IsActive"
                                   checked="@(c.IsActive ? "checked" : null)" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <hr />

        @foreach (var c in Products)
        {
            <p>
                @c.Name —
                @c.Price —
                @(c.IsActive ? "Active" : "Inactive")
            </p>
        }

    </div>
</div>




