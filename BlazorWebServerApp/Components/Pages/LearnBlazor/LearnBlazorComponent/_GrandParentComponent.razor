<div>
    <h3 class="text-bg-danger">Grand Child Component</h3>
    <p class="text-bg-dark"><b>There is a message - @MessageFromChild</b></p>
    <p class="text-bg-warning"><b>There is a message from parent throw child to grand child - @MessageFromParentByChild</b></p>
    <p class="text-bg-info"><b>Lucky Number is - @LuckyNumber</b></p>
</div>

@code {
    [Parameter]
    public string MessageFromChild { get; set; }

    [CascadingParameter(Name = "MessageFromParentByChild")]
    private string MessageFromParentByChild { get; set; }

    [CascadingParameter(Name = "LuckyNumber")]
    private string LuckyNumber { get; set; }
}
